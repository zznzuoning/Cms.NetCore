@{
    ViewData["Title"] = "菜单管理";
}
<form class="layui-form layui-form-pane" style="width:90%;">
    @Html.Hidden("Id")
    @Html.Hidden("ParentId")
    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">菜单名</label>
        <div class="layui-input-block">
            <input type="text" name="MenuName" class="layui-input MenuName" placeholder="请输入按钮名称" autocomplete="off" />
        </div>
    </div>
    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">父节点</label>
        <div class="layui-input-block">
            <input type="text" id="tree" lay-filter="tree" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">标识码</label>
        <div class="layui-input-block">
            <input type="text" name="Code" id="Code" class="layui-input" placeholder="请输入标识码" autocomplete="off" />
        </div>
    </div>

    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">链接地址</label>
        <div class="layui-input-block">
            <input type="text" name="Url" class="layui-input Url" placeholder="请输入标识码" autocomplete="off" />
        </div>
    </div>
    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">图标</label>
        <div class="layui-input-block">
            <input type="text" name="Icon" id="Icon" class="layui-input" placeholder="请输入图标" autocomplete="off" />
        </div>
    </div>
    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">排序</label>
        <div class="layui-input-block">
            <input type="number" name="Sort" class="layui-input Sort" value="1" min="1" autocomplete="off" />
        </div>
    </div>
    <div class="layui-form-item layui-row layui-col-xs12">
        <div class="layui-input-block">
            <button class="layui-btn layui-btn-sm" lay-submit="" lay-filter="addMenu">确定</button>
            <button type="reset" class="layui-btn layui-btn-sm layui-btn-primary">重置</button>
        </div>
    </div>
</form>
@section Scripts{

    <script src="~/layui/layui.js"></script>
    <script src="~/js/common.js"></script>
    <script src="~/js/Menu/MenuAddOrUpdate.js"></script>
}

